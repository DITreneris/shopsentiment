# ShopSentiment Cost Management Environment Variables
# Copy this file to cost_management.env and fill in your values

# API keys for cloud services (for actual cost data retrieval)
# AWS credentials
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# GCP credentials (if using Google Cloud)
GOOGLE_CLOUD_PROJECT=your_gcp_project_id
GOOGLE_APPLICATION_CREDENTIALS=/path/to/credentials.json

# Budget alert settings
COST_ALERT_EMAIL=alerts@example.com
COST_ALERT_WEBHOOK=https://hooks.slack.com/services/your_slack_webhook

# Threshold settings
MONGODB_STORAGE_THRESHOLD_GB=10
REDIS_MEMORY_THRESHOLD_MB=500
API_REQUESTS_THRESHOLD_PER_MIN=1000
WORKER_QUEUE_LENGTH_THRESHOLD=100

# Budget settings
MONTHLY_BUDGET_LIMIT_USD=500
BUDGET_ALERT_THRESHOLDS=0.5,0.75,0.9

# Scaling settings
SCALING_ENABLED=true
WORKER_SCALING_RATIO=1.5
MAX_WORKERS=10
MIN_WORKERS=2

# Cleanup settings
TEMP_DATA_TTL_DAYS=7
LOG_RETENTION_DAYS=30
BACKUP_RETENTION_DAYS=90

# Cost allocation settings
COST_ALLOCATION_ENABLED=true
COST_CENTER_TAG_PREFIX=cost-center 